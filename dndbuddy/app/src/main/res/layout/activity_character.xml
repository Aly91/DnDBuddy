<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dndbuddy.app.dndbuddy.CharacterActivity">

    <TextView
        android:id="@+id/Attacks"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/Spells"
        android:layout_below="@+id/Spells"
        android:layout_marginTop="26dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/displayWisdom"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="252dp"
        android:layout_below="@+id/displayDexterity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp" />

    <TextView
        android:id="@+id/displayStrength"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="252dp"
        android:layout_below="@+id/strength"
        android:layout_toEndOf="@+id/race" />

    <TextView
        android:id="@+id/displayIntelligence"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="199dp"
        android:layout_alignBaseline="@+id/displayWisdom"
        android:layout_alignBottom="@+id/displayWisdom"
        android:layout_alignEnd="@+id/strength" />

    <TextView
        android:id="@+id/displayCharisma"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="199dp"
        android:layout_alignBaseline="@+id/displayWisdom"
        android:layout_alignBottom="@+id/displayWisdom"
        android:layout_alignStart="@+id/displayConstitution" />

    <TextView
        android:id="@+id/displayConstitution"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="252dp"
        android:layout_below="@+id/dexterity"
        android:layout_alignEnd="@+id/displayRace" />

    <TextView
        android:id="@+id/displayclass"
        android:layout_width="256dp"
        android:layout_height="18dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="91dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/displayName"
        android:layout_alignStart="@+id/displayName" />

    <TextView
        android:id="@+id/displayRace"
        android:layout_width="256dp"
        android:layout_height="18dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="51dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/displayclass"
        android:layout_alignStart="@+id/displayclass" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="51dp"
        android:layout_alignBottom="@+id/displayclass"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:id="@+id/Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="91dp"
        android:layout_alignBaseline="@+id/displayRace"
        android:layout_alignBottom="@+id/displayRace"
        android:layout_alignStart="@+id/race" />

    <TextView
        android:id="@+id/Skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="131dp"
        android:layout_below="@+id/displayHitPoints"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/displayName"
        android:layout_width="256dp"
        android:layout_height="18dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/displayDexterity"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="199dp"
        android:layout_below="@+id/dexterity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit Points"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="131dp"
        android:layout_below="@+id/displayRace"
        android:layout_alignStart="@+id/Class"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/displayHitPoints"
        android:layout_width="37dp"
        android:layout_height="27dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="123dp"
        android:layout_alignBottom="@+id/textView20"
        android:layout_toEndOf="@+id/textView20"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strength"
        android:layout_below="@+id/textView20"
        android:layout_alignStart="@+id/displayStrength"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/dexterity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dexterity"
        android:layout_alignBaseline="@+id/strength"
        android:layout_alignBottom="@+id/strength"
        android:layout_alignEnd="@+id/displayDexterity" />

    <TextView
        android:id="@+id/constitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constitution"
        android:layout_above="@+id/displayConstitution"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/intelligence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intelligence"
        android:layout_below="@+id/displayIntelligence"
        android:layout_alignEnd="@+id/displayHitPoints"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/wisdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wisdom"
        android:layout_below="@+id/displayWisdom"
        android:layout_alignEnd="@+id/dexterity" />

    <TextView
        android:id="@+id/charisma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charisma"
        android:layout_below="@+id/displayCharisma"
        android:layout_alignStart="@+id/displayCharisma" />

    <TextView
        android:id="@+id/spellsandattacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Spells and Attacks"
        android:layout_below="@+id/wisdom"
        android:layout_toStartOf="@+id/constitution" />

    <TextView
        android:id="@+id/Spells"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_below="@+id/spellsandattacks"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView20"
        android:background="@android:color/white"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/viewCharacter"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
